<h1>タスク一覧</h1>

<p>ログインユーザー：<%= current_user.name %></p>
<%= link_to '新規タスクの登録', new_task_path, class: 'btn btn-primary' %>

<!--any?は、モデルにデータが存在したらtrueを返すというメソッド-->
<!--taskモデルにデータが存在したらテーブルを表示するという処理-->
<% if @tasks.any? %>
    <table class='table table-striped'>
        <thead>
            <tr>
                <th>id</th>
                <th>ステータス</th>
                <th>タスク</th>
            </tr>
        </thead>
        <tbody>
            <% @tasks.each do |task| %>
                <tr>
                    <td><%= link_to task.id, task %></td>
                    <td><%= task.status %></td>
                    <td><%= task.content %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
    
    <div>
        <%= paginate @tasks %>
    </div>
    
<% end %>