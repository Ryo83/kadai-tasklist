<div class='row'>
    <div class='col-6'>        
        <%= form_with(model: task, local: true) do |t| %>
        
        <!--task.errors.any?は、エラーメッセージの定型文-->
            <% if task.errors.any? %>
                <div id='error_explanation' class='alert alert-warning' %>
                    <ul>
                        <% task.errors.full_messages.each do |msg| %>
                        <li><%= msg %></li>
                        <% end %>
                    </ul>
                </div>
            <% end %>
            
            <div class='form-group'>
                <%= t.label :status, 'ステータス' %>
                <%= t.text_field :status, class: 'form-control' %>    
            </div>
            
            <div class='form-group'>
                <%= t.label :content, 'タスク' %>
                <%= t.text_field :content, class: 'form-control' %>
            </div>
            
            <%= t.submit '追加', class: 'btn btn-primary' %>
        <% end %>
    </div>    
</div>